requireConditional: if self.globalTeamTags(includes='houseAtreidesMod')
buildSpeed: 0s
playSoundToPlayer: ROOT:Data/Voices/Atreides/enemyUnitDestroyed.ogg:2

[hiddenAction_enemyKillOrdos]
